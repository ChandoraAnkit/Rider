<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.chandora.rider.MainActivity">


    <Button
        android:id="@+id/btn_driver"
        android:layout_width="match_parent"
        android:text="I'm a driver"
        android:onClick="OnDriverBtnClick"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_cstmr"
        android:layout_width="match_parent"
        android:text="I'm a customer"
        android:onClick="onCustomerBtnClick"
        android:textSize="18sp"
        android:layout_height="wrap_content" />

</LinearLayout>
