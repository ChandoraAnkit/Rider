<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back_img"
    android:backgroundTintMode="multiply"
    android:backgroundTint="#7986CB"
    android:layout_height="match_parent"
    tools:context="com.example.chandora.rider.MainActivity">




    <Button
        android:id="@+id/btn_driver"
        android:layout_width="match_parent"
        android:text="I'm a driver"
        android:padding="15dp"
        android:background="@drawable/back_round"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/white"
        android:onClick="OnDriverBtnClick"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_cstmr"
        android:layout_width="match_parent"
        android:text="I'm a customer"
        android:background="@drawable/back_round"
        android:padding="15dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:onClick="onCustomerBtnClick"
        android:textSize="18sp"
        android:layout_height="wrap_content" />

</LinearLayout>
