<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.chandora.rider.HistorySingleActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:context="com.example.chandora.rider.HistorySingleActivity" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/ride_location"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="From-to" />
        <TextView
            android:id="@+id/ride_distance"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Distance" />

        <TextView
            android:id="@+id/ride_date"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Date" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/history_driver_image"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_width="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:text="From-to" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/history_driver_name"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Name" />

            <TextView
                android:id="@+id/history_driver_phone"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Phone" />

        </LinearLayout>
    </LinearLayout>
    <RatingBar
        android:id="@+id/rating_bar"
        android:stepSize="1"
        android:visibility="gone"
        android:numStars="5"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
